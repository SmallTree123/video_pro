<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nylgsc.video.dao.UserMapper" >
    <resultMap id="BaseResultMap" type="com.nylgsc.video.entity.User" >
      <id column="id" property="id" jdbcType="VARCHAR" />
      <result column="username" property="username" jdbcType="VARCHAR" />
      <result column="password" property="password" jdbcType="VARCHAR" />
      <result column="face_image" property="faceImage" jdbcType="VARCHAR" />
      <result column="nickname" property="nickname" jdbcType="VARCHAR" />
      <result column="fans_counts" property="fansCounts" jdbcType="INTEGER" />
      <result column="follow_counts" property="followCounts" jdbcType="INTEGER" />
      <result column="receive_like_counts" property="receiveLikeCounts" jdbcType="INTEGER" />
        <result column="del_flag" property="delFlag" jdbcType="VARCHAR" />
    </resultMap>

  <update id="updateInfo" parameterType="com.nylgsc.video.entity.User">
    UPDATE
     USER
     <set>
         <if test="receiveLikeCounts != null">
             receive_like_counts = receive_like_counts + #{receiveLikeCounts},
         </if>
         <if test="fansCounts != null">
             fans_counts = fans_counts + #{fansCounts},
         </if>
         <if test="followCounts != null">
             follow_counts = follow_counts + #{followCounts}
         </if>
     </set>
     where
	  id = #{id}

  </update>

</mapper>